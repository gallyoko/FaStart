<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:gravity="top"
    android:orientation="vertical"
    tools:context="fr.gallyoko.app.fastart.widget.ConfigurationWidgetActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Type : "
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Action 1 : "
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/api1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Action 2 : "
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/api2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Texte On : "
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Couleur On : "
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/colorOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Texte Off : "
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Couleur Off : "
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/colorOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonOk"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="OK" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CANCEL" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>